FROM pytorch/pytorch:1.13.0-cuda11.6-cudnn8-devel

RUN mkdir /autocut
COPY ./ /autocut
WORKDIR /autocut

RUN apt update && \
    apt install -y git && \
    apt install -y ffmpeg

RUN pip config --user set global.index https://mirrors.bfsu.edu.cn/pypi/web/pypi && \
    pip config --user set global.index-url https://mirrors.bfsu.edu.cn/pypi/web/simple && \
    pip config set global.trusted-host mirrors.bfsu.edu.cn  && \
    pip install ./whisper/ && \    
    pip install .